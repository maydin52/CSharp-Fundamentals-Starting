if (sayi % 2 == 1)
    Console.WriteLine("Sayı Tektir...");
else
    Console.WriteLine("Sayi Cifttir");

int i = 10;
//i++ => i=i+1
//Once islem, sonra artır...

//++i =>Once artır, sonra islem...
Console.WriteLine(i++);
Console.ReadLine();
Console.WriteLine(i);
Console.ReadLine();
Console.WriteLine(++i);

Console.WriteLine(3==3);
